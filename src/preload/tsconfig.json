{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../../dist/preload",
    "rootDir": "../",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"],
    },
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["node_modules", "../../dist", "../../release"],
}
